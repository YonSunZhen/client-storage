{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    // typeRoots不加报错
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@ngo": [
        "./src/app/@ngo"
      ],
      "@admin": [
        "./src/app/@admin"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
